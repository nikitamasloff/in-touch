<?xml version="1.0" encoding="utf-8"?>
<resources>

    <public />

    <style name="PrimaryButton" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/blue_grey_400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/light_bg_dark_secondary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerticalSeparator">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/grey_500</item>
    </style>

    <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/blue_grey_600</item>
        <item name="android:indeterminate">true</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/light_bg_dark_primary_text</item>
        <item name="android:textColorHint">@color/light_bg_dark_hint_text</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:maxWidth">500dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Root">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Status">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/light_bg_dark_secondary_text</item>
    </style>
</resources>